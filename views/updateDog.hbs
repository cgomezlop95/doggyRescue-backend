<h1>Update the dog details (only admins)</h1>

{{! action - Specifies where to send the form-data when a form is submitted }}
{{! method - Specifies the HTTP method to use when sending form-data }}

<form
  action="/update-dog/{{dog.id}}?_method=PUT"
  method="post"
  enctype="multipart/form-data"
>

  <div>
    <label for="dogName">Dog Name</label>
    <input type="text" id="dogName" name="dogName" value="{{dog.dogName}}" />
  </div>

  <div>
    <label for="dogAge">Dog Age (in years)</label>
    <input
      type="number"
      id="dogAge"
      name="dogAge"
      min="0"
      step="0.1"
      value="{{dog.dogAge}}"
    />
  </div>

  <div>
    <label for="dogWeight">Dog Weight (in kilos)</label>
    <input
      type="number"
      id="dogWeight"
      name="dogWeight"
      min="0"
      step="0.1"
      value="{{dog.dogWeight}}"
    />
  </div>

  <div>
    <label for="dogSex">Dog Sex</label>
    <select id="dogSex" name="dogSex">
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>

  <div>
    <label for="dogBreed">Dog Breed</label>
    <input type="text" id="dogBreed" name="dogBreed" value="{{dog.dogBreed}}" />
  </div>

  {{! checked - he checked attribute is used with checkboxes and radio buttons 
  to indicate whether the input should initially appear selected or checked }}

  <div>
    <label for="dogAdopted">Has the dog been adopted?</label>
    <input
    type="checkbox"
    id="dogAdopted"
    name="dogAdopted"
    {{#if dog.dogAdopted}}checked{{/if}}
    />
  </div>

  <div>
    <label for="suitableForKids">Is this dog suitable for kids?</label>
    <input
    type="checkbox"
    id="suitableForKids"
    name="suitableForKids"
    {{#if dog.suitableForKids}}checked{{/if}}
    />
  </div>

  <div>
    <label for="suitableForOtherPets">Is this dog suitable for other pets?</label>
    <input
    type="checkbox"
    id="suitableForOtherPets"
    name="suitableForOtherPets"
    {{#if dog.suitableForOtherPets}}checked{{/if}}
  / >
  </div>


  <div>
    <label for="dogDescription">Dog Description</label>
    <textarea
      id="dogDescription"
      name="dogDescription"
      cols="70"
      rows="5"
    >{{dog.dogDescription}}</textarea>
  </div>

  <div>
    <label for="dogPhotoURL">Dog Photo</label>
    <input type="file" id="dogPhotoURL" name="dogPhotoURL" />
  </div>

  <div>
    <button type="submit">Save</button>
  </div>

  <div>
    <a href="/dog/{{dog.id}}">
      <button>Cancel</button>
    </a>
  </div>

</form>